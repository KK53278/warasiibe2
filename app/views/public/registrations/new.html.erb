<div class="form-wrapper">

  <h1>新規登録</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-item">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名" %>
    </div>

    <div class="form-item">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="form-item">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)" %>
    </div>

    <div class="form-item">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
    </div>


    <div class="button-panel">
      <%= f.submit "Sign in", class: "button" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

      <div class="form-footer">
      <p><a href="#"><%= render "public/shared/links" %></a></p>
      </div>
    <% end %>

</div>
